<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:padding="5dp"
    card_view:cardCornerRadius="20dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.93"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.0"
            card_view:srcCompat="@mipmap/ic_launcher"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="208dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"
            android:text="Some Text..."
            android:textSize="20sp"
            card_view:layout_constraintHorizontal_bias="0.229"
            card_view:layout_constraintLeft_toRightOf="@+id/ivThumbnail"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/ivThumbnail"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/date"
            android:layout_width="139dp"
            android:layout_height="27dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:text="TextView"
            android:textSize="20sp"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintLeft_toLeftOf="@+id/tvTitle"
            card_view:layout_constraintRight_toRightOf="@+id/tvTitle"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginTop="19dp"
            card_view:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/trailer"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="TextView"
            android:textSize="20sp"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintLeft_toLeftOf="@+id/date"
            card_view:layout_constraintRight_toRightOf="@+id/date"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="17dp"
            card_view:layout_constraintTop_toBottomOf="@+id/date"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            card_view:layout_constraintVertical_bias="1.0" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
